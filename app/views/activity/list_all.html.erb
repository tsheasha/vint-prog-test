<% if @activities.size > 0 %>
<div id="wrapper">
	<div id="columns">
        <% @activities.each do |activity| %> 
            <div class="pin">
                <p>
                    <%= activity.distance %> m in <%= ChronicDuration.output(activity.duration, :format => :long) %>
                </p>
                <p>
                    <%= activity.comment %> 
                </p>
                <p>
                    | <%= activity.date.strftime("%B %d, %Y") %>
                </p>
            </div>
        <% end %>
	</div>
</div>
<% else %>
<div id="wrapper">
	<div id="columns">
        <div class="pin">
            <p>
                There are not activities yet, be the first!
            </p>
        </div>
	</div>
</div>
<% end %>
